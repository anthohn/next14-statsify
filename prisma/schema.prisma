datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id     String      @unique
  name   String      @db.Text
  tracks UserTrack[]
}

model Track {
  id    String      @id
  users UserTrack[]
}

model UserTrack {
  userId      String
  trackId     String
  ranking     Int
  rankingType String
  date        DateTime
  user        User     @relation(fields: [userId], references: [id])
  track       Track    @relation(fields: [trackId], references: [id])

  @@id([userId, trackId, date, rankingType])
  @@index([trackId], name: "idx_track")
  @@index([userId], name: "idx_user")
}
